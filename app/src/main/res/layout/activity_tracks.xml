<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TracksActivity">

    <RelativeLayout style="@style/relative_style">

        <TextView
            android:id="@+id/track"
            style="@style/text_style"
            android:text="Tracks"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_library_music_black_36"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/track"
            android:layout_marginRight="8dp"
            android:tint="@android:color/white"/>
    </RelativeLayout>

    <ListView
        android:id="@+id/list"
        style="@style/container_style"
        android:drawSelectorOnTop="true"
        android:orientation="vertical" />

    <LinearLayout style="@style/relative_style"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/play_list_click"
            style="@style/bottom_text"
            android:text="@string/play_list" />
        <TextView
            android:id="@+id/album_click"
            style="@style/bottom_text"
            android:text="@string/albums"/>
        <TextView
            android:id="@+id/artist_click"
            style="@style/bottom_text"
            android:text="@string/artist" />
        <TextView
            android:id="@+id/genre_click"
            style="@style/bottom_text"
            android:text="@string/genre"/>
        <TextView
            android:id="@+id/favorite_click"
            style="@style/bottom_text"
            android:text="@string/favorite"/>
    </LinearLayout>
</LinearLayout>